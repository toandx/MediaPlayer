<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_search_song"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:maxLines="1"
            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:src="@drawable/ic_search"
            android:onClick="searchSong"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" >

    </ListView>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/seekBar1"
        android:max="100"
        />
    <RelativeLayout
        android:layout_marginBottom="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="12sp"
            android:id="@+id/tv_currenttime"
            android:text="00:00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:id="@+id/tv_finaltime"
            android:text="00:00"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/tv_songname"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:tint="@android:color/black"
            android:src="@drawable/ic_playlist"
            android:scaleType="fitXY"
            android:onClick="getPlayListActivity"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:tint="@android:color/black"
            android:src="@drawable/ic_prev"
            android:scaleType="fitXY"
            android:onClick="prevMedia"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:id="@+id/btn_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:tint="@android:color/black"
            android:src="@drawable/ic_play"
            android:scaleType="fitXY"
            android:onClick="pauseMedia"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:tint="@android:color/black"
            android:src="@drawable/ic_next"
            android:scaleType="fitXY"
            android:onClick="nextMedia"
            android:background="@android:color/transparent"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:tint="@android:color/black"
            android:src="@drawable/ic_vol"
            android:scaleType="fitXY"
            android:onClick="upVolume"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

</LinearLayout>